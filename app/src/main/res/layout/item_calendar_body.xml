<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
<ScrollView
    android:layout_width="match_parent"
    android:layout_height="0dp"
    tools:ignore="MissingConstraints">
<LinearLayout
    android:id="@+id/test"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">
    <LinearLayout
        android:paddingTop="26dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageView
            android:paddingLeft="20dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/log">
        </ImageView>
        <ImageView
            android:paddingLeft="180dp"
            android:paddingRight="16dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/dog">
        </ImageView>
        <ImageView
            android:layout_gravity="right"
            android:paddingRight="20dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/my">
        </ImageView>
    </LinearLayout>
    <LinearLayout
        android:id="@+id/header"

    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    >

        <TextView
            android:paddingLeft="20dp"

            android:id="@+id/monthYearText"
            style="?android:attr/textAppearanceMedium"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:fontFamily="@font/medi"
            android:gravity="left"
            android:textSize="20dp"
            tools:text="2023년 1월" />

        <ImageButton
            android:id="@+id/previous"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:layout_margin="10dp"
            android:background="?selectableItemBackgroundBorderless"
            android:padding="@dimen/mcv_arrow_padding"
            app:srcCompat="@drawable/polygon" />

    </LinearLayout>

    <LinearLayout
        android:paddingLeft="19dp"
        android:paddingRight="19dp"
        android:paddingTop="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView

            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="일"
            android:textSize="12dp"
            android:textAlignment="center"
            android:textStyle="bold"
            android:background="@drawable/edge_gray"
            android:fontFamily="@font/light"
            android:textColor="@color/day_gray"></TextView>
        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="월"
            android:textStyle="bold"
            android:textSize="12dp"
            android:background="@drawable/edge_gray"
            android:textAlignment="center"
            android:fontFamily="@font/light"
            android:textColor="@color/day_gray"></TextView>
        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:fontFamily="@font/light"
            android:background="@drawable/edge_gray"
            android:layout_weight="1"
            android:text="화"
            android:textStyle="bold"
            android:textSize="12dp"
            android:textAlignment="center"
            android:textColor="@color/day_gray"></TextView>
        <TextView
            android:layout_width="0dp"
            android:fontFamily="@font/light"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/edge_gray"
            android:text="수"
            android:textStyle="bold"
            android:textSize="12dp"
            android:textAlignment="center"
            android:textColor="@color/day_gray"></TextView>
        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:background="@drawable/edge_gray"
            android:fontFamily="@font/light"
            android:layout_weight="1"
            android:text="목"
            android:textStyle="bold"
            android:textSize="12dp"
            android:textAlignment="center"
            android:textColor="@color/day_gray"></TextView>
        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:fontFamily="@font/light"
            android:text="금"
            android:background="@drawable/edge_gray"
            android:textStyle="bold"
            android:textSize="12dp"
            android:textAlignment="center"
            android:textColor="@color/day_gray"></TextView>
        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/edge_gray"
            android:fontFamily="@font/light"
            android:text="토"
            android:textStyle="bold"
            android:textSize="12dp"
            android:textAlignment="center"
            android:textColor="@color/day_gray"></TextView>

    </LinearLayout>

    <androidx.recyclerview.widget.RecyclerView
        android:paddingLeft="19dp"
        android:paddingRight="19dp"
        android:layout_gravity="top"
        android:id="@+id/recyclerView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"></androidx.recyclerview.widget.RecyclerView>
    <TextView
        android:paddingTop="20dp"
        android:paddingLeft="20dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/bold"
        android:gravity="left"
        android:textSize="18dp"
        android:text="Todo list"/>
    <LinearLayout
        android:id="@+id/todo_body_layout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical">
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <ImageView
            android:paddingTop="15dp"
            android:paddingLeft="20dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/rectangle">
        </ImageView>
        <TextView
            android:paddingTop="5dp"
            android:paddingLeft="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/medi"
            android:gravity="left"
            android:textSize="16dp"
            android:text="산책 시키기"/>
    </LinearLayout>
    </LinearLayout>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_gravity="right"
        android:paddingRight="18dp">
        <ImageButton
            android:id="@+id/plus_btn"
            android:adjustViewBounds="true"
            android:scaleType="fitCenter"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_gravity="right"
            android:padding="0dp"
            android:src="@drawable/pulus"></ImageButton>

    </LinearLayout>
</LinearLayout>
</ScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>